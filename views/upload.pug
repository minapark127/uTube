extends layouts/main

block content
    .form__container
            form(action=`/videos${routes.upload}`, method="post", enctype="multipart/form-data")
                h2.form__container__heading 
                    i.fas.fa-file-upload
                    span Upload Video
                .form__container__fileUpload
                    label(for="file") Video File
                    input(type="file", id="file", name="videoFile", accept="video/*", required)
                input(type="text", placeholder="Title", name="title", required)
                textarea(name="description", placeholder="Description", required)
                input(type="submit", value="Upload Video")
    