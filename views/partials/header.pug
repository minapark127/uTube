header.header
    .header__wrapper
        .header__column
            a(href="/").logo
                i.fas.fa-play-circle
                h1 #{siteName}
        .header__column
            form(action=routes.search, method="get")
                input(type="text", name="term", placeholder="Search")
                input(type="submit", value="🔍")
        .header__column
            nav
                ul
                    if !user.isAuthenticated
                        a(href=routes.join)
                            li Join
                        a(href=routes.login)
                            li Log In
                    else
                        a(href=`/videos${routes.upload}`)
                            li Upload
                        a(href=routes.userDetail(user.id))
                            li Profile
                        a(href=routes.logout)
                            li Log Out