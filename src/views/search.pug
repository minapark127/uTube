extends layouts/main
include mixins/videoBlock

block content
    .search__header
        h1 #{videos.length} #{videos.length === 1 ? "result" : "results"} for "#{searchTerm}"...
        if videos.length === 0
            h2 No Videos Found
    .search__videos
        each item in videos
            +videoBlock({
                id: item.id,
                title: item.title,
                views:item.views,
                videoFile:item.fileUrl
            })